{
  "id": "@artifactId@-@version@",
  "name": "Folio mod-mosaic module",
  "requires": [
    {
      "id": "orders",
      "version": "12.0"
    },
    {
      "id": "order-lines",
      "version": "3.0"
    },
    {
      "id": "organizations.organizations",
      "version": "1.1"
    },
    {
      "id": "finance.expense-classes",
      "version": "3.0"
    },
    {
      "id": "finance.funds",
      "version": "3.0"
    }
  ],
  "provides": [
    {
      "id": "mosaic",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/orders",
          "permissionsRequired": [
            "mosaic.orders.item.post"
          ],
          "modulePermissions": [
            "orders.item.post"
          ]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "2.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/_/tenant",
          "modulePermissions": [
          ]
        }, {
          "methods": ["GET", "DELETE"],
          "pathPattern": "/_/tenant/{id}"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "mosaic.all",
      "displayName": "Mosaic API module - all permissions",
      "description": "All permissions for mosaic module",
      "subPermissions": [
        "mosaic.orders.item.post"
      ]
    },
    {
      "permissionName": "mosaic.orders.item.post",
      "displayName": "post mosaic orders",
      "description": "Create Mosaic orders"
    }
  ],
  "launchDescriptor": {
    "dockerImage": "@artifactId@:@version@",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 502293850,
        "PortBindings": {
          "8081/tcp": [
            {
              "HostPort": "%p"
            }
          ]
        }
      }
    },
    "env": [
      {
        "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=75.0"
      },
      {
        "name": "ENV",
        "value": "folio",
        "description": "The logical name of the deployment, must be unique across all environments using the same shared resources"
      },
      {
        "name": "OKAPI_URL",
        "value": "http://sidecar:8081",
        "description": "Okapi URL"
      },
      {
        "name": "DB_HOST",
        "value": "postgres",
        "description": "Postgres hostname"
      },
      {
        "name": "DB_PORT",
        "value": "5432",
        "description": "Postgres port"
      },
      {
        "name": "DB_USERNAME",
        "value": "folio_admin",
        "description": "Postgres username"
      },
      {
        "name": "DB_PASSWORD",
        "value": "folio_admin",
        "description": "Postgres username password"
      },
      {
        "name": "DB_DATABASE",
        "value": "okapi_modules",
        "description": "Postgres database name"
      }
    ]
  }
}
